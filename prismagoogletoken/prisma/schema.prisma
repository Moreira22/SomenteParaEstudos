// prisma/schema.prisma

generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  // sem URL! A URL agora vem do prisma.config.ts
}

model User {
  id        Int      @id @default(autoincrement())
  name      String?
  email     String   @unique
  picture   String?
  createdAt DateTime @default(now())
}
